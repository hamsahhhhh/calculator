<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Calculater" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/brand</item>
        <item name="colorPrimaryVariant">@color/brand</item>
        <item name="colorOnPrimary">@color/white</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/Backround</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="calculaterButton">
        <item name="android:textSize">@dimen/textButton</item>
    </style>

    <style name="calculaterButton.number">

        <item name="android:background">@drawable/circule_button_white</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="calculaterButton.Operation">
        <item name="android:background">@drawable/circule_button</item>
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="calculaterButton.result">
        <item name="android:background">@drawable/rounded_button</item>
        <item name="android:textColor">@color/white</item>
    </style>
</resources>